    "def smartdiv(fun):\n",
    "    def inner(**kwargs):\n",
    "        if kwargs['a']>kwargs['b']:\n",
    "            return fun(kwargs['a'],kwargs['b'])\n",
    "        else:\n",
    "            return fun(kwargs['b'],kwargs['a'])\n",
    "\n",
    "    return inner\n",
    "\n",
    "\n",
    "@smartdiv\n",
    "def div(a,b):\n",
    "    return a/b\n",
    "\n",
    "\n",
    "print(div(a = 2,b = 5))\n",
    "\n"
   ]
  }
